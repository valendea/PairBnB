<div class="pt-4">
<%= form_with(model: listing, local: true) do |form| %>
  <% if listing.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(listing.errors.count, "error") %> prohibited this listing from being saved:</h2>

      <ul>
      <% listing.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <%= form.label :property, class: "col-sm-2" %>
    <%= form.text_field :title, id: :listing_title, class: 'form-control col-sm-5' %>
  </div>

  <div class="form-group row">
    <%= form.label :property_type, class: "col-sm-2" %>
    <%= form.text_field :property_type, id: :listing_property_type, class: 'form-control col-sm-5' %>
  </div>

  <div class="form-group row">
    <%= form.label :price, class: "col-sm-2" %>
    <%= form.number_field :price, id: :listing_price, class: 'form-control col-sm-5' %>
  </div>

  <div class="form-group row">
    <%= form.label :address, class: "col-sm-2" %>
    <%= form.text_area :address, id: :listing_address, class: 'form-control col-sm-5' %>
  </div>

  <div class="form-group row">
    <%= form.label :no_of_rooms, class: "col-sm-2" %>
    <%= form.number_field :num_of_rooms, id: :listing_num_of_rooms, class: 'form-control col-sm-5' %>
  </div>

  <div class="form-group row">
    <%= form.label :no_of_bathrooms, class: "col-sm-2" %>
    <%= form.number_field :no_of_bathrooms, id: :listing_no_of_bathrooms, class: 'form-control col-sm-5' %>
  </div>

  <div class="form-group row">
    <%= form.label :description, class: "col-sm-2" %>
    <%= form.text_area :description, id: :listing_description, class: 'form-control col-sm-5' %>
  </div>

  <div class="form-group row">
    <%= form.label :house_rules, class: "col-sm-2" %>
    <%= form.text_area :house_rules, id: :listing_house_rules, class: 'form-control col-sm-5' %>
  </div>

  <div class="form-group row">
    <%= form.label :photos, class: "col-sm-2" %>
    <%= form.file_field :photos, multiple: true, id: :photos, class: 'btn btn-light' %>
  </div>

  <div class="actions">
    <%= form.submit class: 'btn btn-outline-dark'%>
  </div>

<% end %>
</div>
