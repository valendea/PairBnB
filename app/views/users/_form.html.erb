
<div class="form-group row">
  <%= form.label :first_name, class: "col-sm-2 col-form-label" %>
  <%= form.text_field :first_name, class: "col-sm-6", id: "inputEmail4" %>
</div>

<div class="form-group row">
  <%= form.label :last_name, class: "col-sm-2 col-form-label" %>
  <%= form.text_field :last_name, class: "col-sm-6" %>
</div>

<div class="form-group row">
  <%= form.label :email, class: "col-sm-2 col-form-label" %>
  <%= form.text_field :email, type: 'email', class: "col-sm-6" %>
</div>

<div class="form-group row">
  <%= form.label :password, class: "col-sm-2 col-form-label" %>
  <%= form.password_field :password, class: "col-sm-6" %>
</div>

<div class="form-group row">
	<%= form.label :profile_picture, class: "col-sm-2 col-form-label" %>
	<%= form.file_field :photo, id: :photo, class: 'btn btn-light' %>
</div>
